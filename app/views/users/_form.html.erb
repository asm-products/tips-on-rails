<div class="row">
  <div class="col-xs-12">
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control', disabled: true %>
    </div>
  </div>

  <div class="col-xs-12">
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>  
    </div>
  </div>

  <div class="col-xs-12">
    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control', autofocus: true %>
    </div>
  </div>

  <div class="col-xs-12">
    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-xs-12">
    <%= f.button 'Update', class: 'btn btn-success', data: { disable_with: 'Please wait...' } %>
  </div>
</div>